{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (Last Mode)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "-f",
                "telemetry.json"
            ]
        },
        {
            "name": "Launch (Send All Mode)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "-f",
                "telemetry.json",
                "--sendAll",
                "--workers",
                "10"
            ]
        },
        {
            "name": "Launch (Custom File)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "-f",
                "${input:telemetryFile}"
            ]
        },
        {
            "name": "Run Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-v"
            ]
        },
        {
            "name": "Run Tests (Current Package)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "args": [
                "-v"
            ]
        }
    ],
    "inputs": [
        {
            "id": "telemetryFile",
            "type": "promptString",
            "description": "Path to telemetry JSON Lines file",
            "default": "telemetry.json"
        }
    ]
}
