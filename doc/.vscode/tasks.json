{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "ingest_telemetry",
                "."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build (Race Detector)",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-race",
                "-o",
                "ingest_telemetry",
                "."
            ],
            "group": "build",
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "./..."
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Test (Coverage)",
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "-cover",
                "./..."
            ],
            "group": "test",
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-f",
                "ingest_telemetry"
            ],
            "problemMatcher": []
        },
        {
            "label": "Go Mod Tidy",
            "type": "shell",
            "command": "go",
            "args": [
                "mod",
                "tidy"
            ],
            "problemMatcher": []
        }
    ]
}
